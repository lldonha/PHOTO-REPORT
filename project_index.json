{
  "project_type": "single",
  "services": {
    "backend": {
      "path": ".",
      "tech_stack": ["python", "fastapi", "pydantic", "sqlalchemy", "alembic"],
      "port": 8000,
      "external_port": 8002,
      "dev_command": "uvicorn src.main:app --reload --host 0.0.0.0 --port 8000",
      "test_command": "pytest tests/ -v",
      "entry_point": "src/main.py"
    },
    "frontend": {
      "path": "src/frontend",
      "tech_stack": ["html", "css", "javascript"],
      "port": 8080,
      "dev_command": "python -m http.server 8080 -d src/frontend",
      "type": "static"
    },
    "postgresql": {
      "path": ".",
      "tech_stack": ["postgresql"],
      "port": 5432,
      "dev_command": "docker-compose up -d db",
      "type": "infrastructure"
    }
  },
  "infrastructure": {
    "docker": true,
    "database": "postgresql",
    "docker_compose": "docker-compose.yml"
  },
  "conventions": {
    "linter": "none",
    "formatter": "none",
    "testing": "pytest",
    "docstring_style": "google",
    "docstring_language": "portuguese",
    "logging": "module_logger"
  },
  "directories": {
    "source": "src",
    "tests": "tests",
    "models": "src/models",
    "schemas": "src/schemas",
    "services": "src/services",
    "repositories": "src/repositories",
    "api": "src/api",
    "core": "src/core",
    "migrations": "alembic/versions",
    "frontend": "src/frontend",
    "uploads": "uploads"
  }
}
